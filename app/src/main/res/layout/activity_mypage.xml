<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/main_background">
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		
		<ImageView
			android:id="@+id/finish_mypage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:text="내정보"
			android:textSize="25dp" />
	</LinearLayout>
	
	<ImageView
		android:id="@+id/imageView2"
		android:layout_width="140dp"
		android:layout_height="155dp"
		android:layout_marginTop="130dp"
		android:background="@drawable/clock_logo"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<TextView
		android:id="@+id/connect_bluetooth"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="60dp"
		android:layout_marginTop="35dp"
		android:text="블루투스 연결"
		android:textColor="@color/white"
		android:textSize="20dp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageView2" />
	
	<TextView
		android:id="@+id/register_plant"
		android:clickable="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="60dp"
		android:layout_marginTop="10dp"
		android:text="반려식물 등록"
		android:textColor="@color/white"
		android:textSize="20dp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/connect_bluetooth" />

</android.support.constraint.ConstraintLayout>
